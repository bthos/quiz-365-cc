{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/host", "destination": "/host.html" },
      { "source": "/play", "destination": "/play.html" }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
